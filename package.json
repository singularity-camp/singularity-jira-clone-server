{
  "name": "singularity-jira-clone-server",
  "version": "1.0.0",
  "description": "BE for singularity-jira-clone-webapp",
  "main": "index.js",
  "repository": "git@github.com:singularity-camp/singularity-jira-clone-server.git",
  "author": "Talgat <talgat.s@protonmail.com>",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "build": "tsc",
    "start": "node ./dist/index.js",
    "dev": "nodemon ./src/index.ts",
    "hasura": "hasura --skip-update-check",
    "hasura:console": "npm run hasura console --envfile .env",
    "reset": "npm run hasura metadata clear && npm run hasura migrate delete --server --all --force --database-name default && npm run hasura migrate apply --database-name default && npm run hasura seed apply && npm run hasura metadata apply"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.39",
    "concurrently": "^7.2.1",
    "dotenv": "^16.0.1",
    "hasura-cli": "^2.7.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
